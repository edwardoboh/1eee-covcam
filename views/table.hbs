<style>

    table {
        border-radius: 5px 5px 0 0;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        margin: 20px 0;
        font-size: 0.9em;
    }

    table thead tr {
        background-color: red;
        color: white;
        font-weight: bold;
    }

    th {
        position: sticky;
        top: 0
    }

    td{
        padding: 10px 20px
    }
</style>

<div>
    <h5>ALL CAPTURED DATA</h5>
</div>
<div id="tableDiv">
    <table class="striped">
        <thead>
            <tr>
                <th>s/n</th>
                <th>Image</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>ID</th>
                <th>Sex</th>
                <th>Age</th>
                <th>Date Captured</th>
            </tr>
        </thead>
        <tbody>
                {{#each allData}}
                    <tr>
                        <td>{{this.index}}</td>
                        <td>{{this.imageURL}}</td>
                        <td>{{this.firstName}}</td>
                        <td>{{this.lastName}}</td>
                        <td>{{this._id}}</td>
                        <td>{{this.sex}}</td>
                        <td>{{this.age}}</td>
                        <td>{{this.dateCaptured}}</td>
                    </tr>
                {{/each}}
        </tbody>
    </table>
</div>
