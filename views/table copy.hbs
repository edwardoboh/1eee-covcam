<script>
    const tableHeadLabels = ["s/n", "Image", "First Name", "Last Name", "ID", "Sex", "Age", "Date Captured"]
    const tableHeadIndex = ["imageURL", "firstName", "lastName", "_id", "sex", "age", "dateCaptured"]

    const tableBodyData = [
        {
            _id: "5fbbc22442c411ac60bc4e34",
            firstName: "Apple",
